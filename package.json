{
  "name": "@worldofsoftware/worldofsoftware",
  "version": "1.0.0",
  "description": "Official monorepo managed and maintained by the World of Software corporation and community.",
  "keywords": [
    "WorldOfSoftware",
    "WOS",
    "open source",
    "community",
    "open source community",
    "global operations"
  ],
  "license": "AGPL-3.0-or-later",
  "author": "Scraps",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/TheWorldOfSoftwareCorp/WorldOfSoftware.git"
  },
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "private": true,
  "scripts": {
    "format": "prettier \"**/*.{js,ts,md,json,yaml}\" --write",
    "format:all": "pnpm run format & pnpm --filter \"./configurations/**\" --filter \"./packages/**\" run format",
    "lint": "eslint . --fix",
    "lint:all": "pnpm --filter \"./configurations/**\" --filter \"./packages/**\" run lint",
    "precommit": "pnpm run format:all"
  },
  "devDependencies": {
    "@worldofsoftware/configs": "workspace:^",
    "eslint": "^8.56.0",
    "globals": "^13.24.0",
    "prettier": "^3.2.1"
  }
}
